<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tela.tearapp.Principal"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ececec">

    <Button
        android:id="@+id/btnCronometria"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="CRONOMETRIA"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:onClick="chamaCronometria"
        />

    <Button
        android:id="@+id/btnDados"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="SINCRONIZAR"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:onClick="sincronizar"
        />

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:text="CONFIGURAÃ‡OES"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:onClick="chamaConfiguracoes"
        />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
